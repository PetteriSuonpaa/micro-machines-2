{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Niban",  
            "args": [],  
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",  // Optional: If you want it to build automatically
            "miDebuggerPath": "/usr/bin/gdb",  // Adjust if gdb is in a different path
            "logging": {
                "trace": true,
                "engineLogging": false,
                "programOutput": true,
                "exceptions": true
            }
        }
    ]
}